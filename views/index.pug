extends layout

block content
  
  h1= `Total entries found: ${count}`
  table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year
    tbody
      each book in books 

        tr
          td
            a(href=`/books/${book.id}/edit`) #{book.title}
          td= book.author
          td= book.genre
          td= book.year

  include pagination  